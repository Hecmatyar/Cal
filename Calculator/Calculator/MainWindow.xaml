        <Button Content="." HorizontalAlignment="Left" Margin="150,386,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" Foreground="#FF686868" FontWeight="Bold"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="220,386,0,0" VerticalAlignment="Top" Width="60" Height="60" Background="#FF41B1E1" Foreground="White" FontSize="25"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="99" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" FontSize="20"/>
        <Image x:Name="clear" HorizontalAlignment="Left" Height="23" Margin="245,79,0,0" VerticalAlignment="Top" Width="24" Source="icons/icons8-Стереть символ-32.png" Cursor="Hand" MouseLeftButtonDown="clear_MouseLeftButtonDown"/>

