        <Button Content="7" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" Foreground="#FF686868" FontWeight="Normal"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="80,191,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" FontWeight="Normal" Foreground="#FF686868"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="150,191,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" Foreground="#FF686868" FontWeight="Normal"/>
