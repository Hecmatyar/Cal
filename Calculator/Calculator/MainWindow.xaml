        <Button Content="6" HorizontalAlignment="Left" Margin="150,256,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" Foreground="#FF686868" FontWeight="Normal"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="220,256,0,0" VerticalAlignment="Top" Width="60" Height="60" Foreground="#FF41B1E1" FontSize="25" FontWeight="Normal"/>
        <Button Content="1" HorizontalAlignment="Left" Margin="10,321,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" Foreground="#FF686868" FontWeight="Normal"/>
        <Button Content="2" HorizontalAlignment="Left" Margin="80,321,0,0" VerticalAlignment="Top" Width="60" Height="60" FontSize="20" Foreground="#FF686868" FontWeight="Normal"/>
